<% layout('layout/boilerplate') %>

<div class="d-flex justify-content-center mt-5 mx-5">
  <div class="card shadow p-5 pt-0 m-5 bg-body rounded" style="width: 60em">
    <div class="card-body">
      <div class="text-center fs-2 my-3 fw-bold text-success">LogIn</div>
      <form action="/login" method="post">
        <label for="mail" class="form-label m-2 fs-5">Email:</label>
        <input type="email" class="form-control m-2" id="mail" name="email" />
        <label for="password" class="form-label m-2 fs-5">Password:</label>
        <input
          type="password"
          class="form-control m-2"
          id="password"
          name="password"
        />
        <div class="d-flex justify-content-center">
          <button class="btn btn-lg btn-success">log In</button>
        </div>
      </form>
    </div>
  </div>
</div>
