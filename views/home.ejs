<% layout('layout/boilerplate') %> 
<link rel="stylesheet" href="css/home.css"> 

<a href="/createtodo" class="float">
  <i class="fa-solid fa-plus fs-3 my-3"></i>
</a>

<div class="text-center fs-2 fw-bold my-3" style="color: rgb(0, 149, 255);">Your TODO List</div>
<div class="row">
  <% rows.map((o)=>{ %> 
    <div class="col-md-4">
      <a href="./todo/<%= o.id %> " style="color: inherit; text-decoration: none">
        <div class="card m-5 shadow bg-body rounded hover" style="border-left:5px solid rgba(0, 217, 255, 0.66);">
          <div class="card-body">
            <h5 class="card-title text-dark mb-4"><%= o.name  %>  </h5>
            <h6 class="card-subtitle mb-4 text-muted"> <%= o.description %> </h6>
            <p class="card-text mt-3"><span class=""> <%= o.created.getDate() %>/<%= o.created.getMonth() %>/<%= o.created.getFullYear() %></span><span class="ms-3"><%= o.created.getHours() %>:<%= o.created.getMinutes() %></span></p>
          </div>
        </div>
      </a>
    </div>
  
<%   }) %> 
</div>
