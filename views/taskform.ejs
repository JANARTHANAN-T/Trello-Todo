<% layout('layout/boilerplate') %>

<div class="d-flex justify-content-center mt-5 mx-5">
  <div class="card shadow p-5 pt-0 m-5 bg-body rounded" style="width: 60em">
    <div class="card-body">
      <div class="text-center fs-2 my-3 fw-bold text-success">Create TODO</div>
      <form action="/createtodo" method="post">
        <label for="title" class="form-label m-2 fs-5">Todo Title</label>
        <input type="text" class="form-control m-2" id="title" name="name" />
        <label for="description" class="form-label m-2 fs-5"
          >Description:</label
        >
        <input
          type="text"
          class="form-control m-2"
          id="description"
          name="description"
        />
        <div class="d-flex justify-content-center">
          <button class="btn btn-lg btn-success">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>
