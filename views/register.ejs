<% layout('layout/boilerplate') %> 

<div class="d-flex justify-content-center mt-5">
  <div class="card shadow p-5 pt-0 m-5 bg-body rounded" style="width: 60em">
    <div class="card-body">
      <div class="text-center fs-2 my-3 fw-bold text-success">Register</div>
      <form action="/register" method="post" >
        <label for="name" class="form-label m-2 fs-5">User Name:</label>
        <input type="text" class="form-control m-2" id="name" name="name"/>
        <label for="mail" class="form-label m-2 fs-5">Email:</label>
        <input type="email" class="form-control m-2" id="mail" name="email" />
        <label for="number" class="form-label m-2 fs-5">Mobile Number:</label>
        <input type="number" class="form-control m-2" id="number" name="number"/>
        <label for="password" class="form-label m-2 fs-5">Password:</label>
        <input type="password" class="form-control m-2" id="password" name="password"/>
        <div class="d-flex justify-content-center">
          <button class="btn btn-lg btn-success">Register</button>
        </div>
      </form>
    </div>
  </div>
</div>
